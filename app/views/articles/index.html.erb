<div class="row">
  <div class="col-sm">
    <h1>Articles</h1>

    <p>Our blog has <%= Article.public_count %> articles and counting!</p>

      <% @articles.each do |article| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= article.created_at %></h6>
            <p class="card-text"><%= article.body %></p>
            <%= link_to "Read full article", article, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>

    <%= link_to "New Article", new_article_path %>
  </div>
</div>
